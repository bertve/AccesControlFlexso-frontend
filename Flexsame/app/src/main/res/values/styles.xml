<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/OpenSansTextViewStyle</item>
        <item name="android:buttonStyle">@style/OpenSansButtonStyle</item>
        <item name="android:editTextStyle">@style/OpenSansEditTextViewStyle</item>
        <item name="android:imageButtonStyle">@style/imageButtonStyle</item>
        <item name="floatingActionButtonStyle">@style/myFab</item>
    </style>

<style name="myFab" parent="@style/Widget.MaterialComponents.FloatingActionButton">
    <item name="android:color">@color/colorPrimary</item>
</style>
    <style name="OpenSansTextViewStyle" parent="android:Widget.Material.TextView">
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="OpenSansEditTextViewStyle" parent="android:Widget.Material.EditText">
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="OpenSansButtonStyle" parent="Theme.MaterialComponents.Light">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="imageButtonStyle" parent="android:Widget.Material.ImageButton">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="title" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>


</resources>
