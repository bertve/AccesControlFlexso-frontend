<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/OpenSansTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:editTextStyle">@style/OpenSansEditTextViewStyle</item>

    </style>

    <style name="OpenSansTextViewStyle" parent="android:Widget.Material.TextView">
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="OpenSansEditTextViewStyle" parent="android:Widget.Material.EditText">
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Material.Button">
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

</resources>
